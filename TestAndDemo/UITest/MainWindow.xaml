<Window x:Class="UITest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UITest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#222">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="128px"/>
			<ColumnDefinition Width="auto"/>
			<ColumnDefinition Width="1*"/>
		</Grid.ColumnDefinitions>
		<StackPanel>
			<Button Click="BtnT1_Click">ImgTest</Button>
			<Button Click="BtnT2_Click">ImgTest</Button>
		</StackPanel>
		<GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Width="3px"/>

		<Image x:Name="imgshow" Grid.Column="2"></Image>
    </Grid>
</Window>
